import java.util.*;

class Student {
    String name;
    double marks;

    Student(String name, double marks) {
        this.name = name;
        this.marks = marks;
    }
}

public class StudentFiltering {
    public static void main(String[] args) {
        List<Student> students = Arrays.asList(
            new Student("Anchal", 92),
            new Student("Lakshita", 68),
            new Student("Rohit", 81),
            new Student("Karan", 73),
            new Student("Simran", 88)
        );

        System.out.println("Students scoring above 75%, sorted by marks:");
        students.stream()
                .filter(s -> s.marks > 75)                // Filter students
                .sorted((s1, s2) -> Double.compare(s2.marks, s1.marks)) // Sort by marks descending
                .map(s -> s.name + " (" + s.marks + "%)") // Extract name and marks
                .forEach(System.out::println);             // Print results
    }
}
